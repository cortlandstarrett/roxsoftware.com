set nocompatible        " Use Vim defaults instead of 100% vi compatibility
set backspace=indent,eol,start  " more powerful backspacing
syntax on
set smartindent
set nobackup
set shiftwidth=2
set softtabstop=2
set ruler
set background=dark
set expandtab
set hlsearch
"colors darkblue
let highlight_function_name = 1
highlight Comment ctermfg=cyan
